<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/itemHD_Hinh"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemHD_Ma"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/cerapro_regular"
        android:gravity="center|start"
        android:text="Mã HD: 1"
        android:textColor="@color/dark_blue"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/itemHD_Hinh"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemHD_TongSL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/cerapro_regular"
        android:gravity="center|start"
        android:text="Số lượng: "
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/itemHD_Hinh"
        app:layout_constraintTop_toBottomOf="@+id/itemHD_Ma" />

    <TextView
        android:id="@+id/itemHD_TongTien"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/cerapro_regular"
        android:gravity="center|start"
        android:text="Thành tiền: 100,000 VND"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/itemHD_Hinh"
        app:layout_constraintTop_toBottomOf="@+id/itemHD_TongSL" />

</androidx.constraintlayout.widget.ConstraintLayout>